@model List<CommentListByBlogIdDto>
<h3 class="mb-5">@ViewBag.CommentCount Comments</h3>

<ul class="comment-list">
    
    @foreach(var item in Model)
    {
        <li class="comment">
            <div class="vcard bio">
                <img src="~/carbook-master/images/default-avatar.webp" alt="Image placeholder">
            </div>
            <div class="comment-body">
                <h3>@item.Name</h3>
                <div class="meta">@(((DateTime)item.CreatedDate).ToString("dd-MMMM-yyyy"))</div>
                <p>@item.Description</p>
            </div>
        </li>
    }

