@{
    var pageName = ViewContext.RouteData.Values["controller"].ToString();
}
<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
    <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">Car<span>Book</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                <li class="nav-item"><a asp-controller="About" asp-action="Index" class="nav-link">About</a></li>
                <li class="nav-item"><a asp-controller="Services" asp-action="Index" class="nav-link">Services</a></li>
                <li class="nav-item"><a asp-controller="Pricing" asp-action="Index" class="nav-link">Pricing</a></li>
                <li class="nav-item"><a asp-controller="Cars" asp-action="Index" class="nav-link">Cars</a></li>
                <li class="nav-item"><a asp-controller="Blog" asp-action="Index" class="nav-link">Blog</a></li>
                <li class="nav-item"><a asp-controller="Contact" asp-action="Index" class="nav-link">Contact</a></li>
            </ul>
        </div>
        <script>
            for (let i = 0; i < document.getElementsByClassName("nav-item").length; i++) {
                console.log(document.getElementsByClassName("nav-item")[i]);
                console.log(document.getElementsByClassName("nav-item")[i].getElementsByTagName("a")[0].innerHTML);
            }

            for (let i = 0; i < document.getElementsByClassName("nav-item").length; i++) {
                if (document.getElementsByClassName("nav-item")[i].getElementsByTagName("a")[0].innerHTML == "@pageName") {
                    document.getElementsByClassName("nav-item")[i].classList.add("active");
                }
                else {
                    document.getElementsByClassName("nav-item")[i].classList.remove("active");
                }
            }
        </script>
    </div>
</nav>