@model List<ListContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
    int count1 = 0;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Messages</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Message</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->




<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Message Table</h4>
                <p class="card-subtitle mb-4">
                    You can do CRUD operations on that table.
                </p>

                @if (Model.Count < 1)
                {
                    <p><b>There is no Message yet.</b></p>
                }
                else
                {
                    <table id="basic-datatable" class="table dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Subjest</th>
                                <th>Email</th>
                                <th>Received Date</th>
                                <th>Delete</th>
                                <th>Update</th>
                                <th>Message:</th>
                            </tr>
                        </thead>


                        <tbody>
                            <script type="text/javascript">
                                function confirmDelete() {
                                    return confirm("Are you sure you want to delete this feature?");
                                }
                            </script>
                            @foreach (var item in Model)
                            {
                                count1++;
                                <tr>
                                    <th scope="row">@count1</th>
                                    <td>@item.Name</td>
                                    <td>@item.Subject</td>
                                    <td>@item.Email</td>
                                    <td>@item.SendDate</td>
                                    <td><a href="/Admin/AdminContact/RemoveContact/@item.ContactID" class="btn btn-outline-danger" onclick="return confirmDelete();">Delete</a></td>
                                    <td><a href="/Admin/AdminContact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Update</a></td>
                                    <td>@item.Message</td>
                                </tr>

                            }

                        </tbody>
                    </table>
                }

                

            </div> <!-- end card body-->
        </div> <!-- end card -->
    </div><!-- end col-->
</div>

