@model List<ListCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
    int count1 = 0;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Comments for Blog</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="AdminBlog" asp-action="Index">Blogs</a></li>
                    <li class="breadcrumb-item active">Comments</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->


<div class="row">

    @if (Model.Count < 1)
    {
        <div class="table-responsive">
            <p><b>There is no Comment yet.</b></p>
        </div>
    }
    else
    {
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">

                    <h4 class="card-title">Comment Table</h4>
                    <p class="card-subtitle mb-4">You can do CRUD operations on that table.</p>

                    <ul class="nav nav-tabs nav-justified mb-3">
                        <li class="nav-item">
                            <a href="#home1" data-toggle="tab" aria-expanded="true" class="nav-link active">
                                <i class="mdi mdi-home-variant d-lg-none d-block"></i>
                                <span class="d-none d-lg-block">By Card </span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#profile1" data-toggle="tab" aria-expanded="false" class="nav-link">
                                <i class="mdi mdi-account-circle d-lg-none d-block"></i>
                                <span class="d-none d-lg-block">By Line</span>
                            </a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane show active" id="home1">
                            <div class="row">

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <div class="col-md-4">
                                        <div class="card">
                                            <h5 class="card-header">Commment @count</h5>
                                            <div class="card-body">
                                                <h4 class="card-title">@item.Name</h4>
                                                <p class="card-text">
                                                   @item.Description
                                                </p>
                                                <a href="#" class="btn btn-primary waves-effect waves-light">Passive</a>
                                            </div>
                                        </div>
                                    </div>
                                }




                            </div>
                        </div>
                        <div class="tab-pane" id="profile1">
                            <div class="col-xl-12">
                                <div class="card">
                                    <div class="card-body">

                                        <div class="table-responsive">

                                            <table class="table mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Name</th>
                                                        <th>Description</th>
                                                        <th>Created Date</th>
                                                        <th>Delete</th>
                                                        <th>Update</th>


                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <script type="text/javascript">
                                                        function confirmDelete() {
                                                            return confirm("Are you sure you want to delete this feature?");
                                                        }
                                                    </script>

                                                    @foreach (var item in Model)
                                                    {
                                                        count1++;
                                                        <tr>
                                                            <th scope="row">@count1</th>
                                                            <td>@item.Name</td>
                                                            <td>@item.Description</td>
                                                            <td>@item.CreatedDate</td>
                                                            <td><a href="/Admin/AdminComment/RemoveComment/@item.CommentID" class="btn btn-outline-danger" onclick="return confirmDelete();">Delete</a></td>
                                                            <td><a href="/Admin/AdminComment/UpdateComment/@item.CommentID" class="btn btn-outline-success">Update</a></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>


                                        </div>

                                    </div>
                                    <!-- end card-body-->
                                </div>
                                <!-- end card -->

                            </div>
                        </div>
                    </div>

                </div> <!-- end card-body-->
            </div> <!-- end card-->
        </div>
    }

