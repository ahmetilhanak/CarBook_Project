@model List<ListReferenceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;

}


<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">References</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">References</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Reference Table</h4>
                <p class="card-subtitle mb-4">
                    You can do CRUD operations on that table.
                </p>
                <div class="table-responsive">
                    @if (Model.Count < 1)
                    {
                        <p><b>There is no Reference yet.</b></p>
                    }
                    else
                    {
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Title</th>
                                    <th>Comment</th>                                   
                                    <th>Delete</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                <script type="text/javascript">
                                    function confirmDelete() {
                                        return confirm("Are you sure you want to delete this feature?");
                                    }
                                </script>

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>                                     
                                        <td><img src="@item.ImageUrl" width="50" height="50"/></td>
                                        <td>@item.Name</td>
                                        <td>@item.Title</td>
                                        <td>@item.Comment</td>                             
                                        <td><a href="/Admin/AdminReference/RemoveReference/@item.TestimonialID" class="btn btn-outline-danger" onclick="return confirmDelete();">Delete</a></td>
                                        <td><a href="/Admin/AdminReference/UpdateReference/@item.TestimonialID" class="btn btn-outline-success">Update</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <br />
                    <a href="/Admin/AdminReference/CreateReference" class="btn btn-outline-primary">Add New Reference</a>
                </div>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->
    </div>
    <!-- end col -->
</div>