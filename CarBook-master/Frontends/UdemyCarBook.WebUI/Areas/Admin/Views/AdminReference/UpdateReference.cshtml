@model UpdateReferenceDto
@{
    ViewData["Title"] = "UpdateReference";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">References</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="AdminReference" asp-action="Index">Reference</a></li>
                    <li class="breadcrumb-item">Update Reference</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Update Reference</h4>
        <p class="card-subtitle mb-4">You can update Reference on table below.</p>

        <form method="post">
            <input type="hidden" asp-for=TestimonialID />

            <div class="form-group">
                <label for="exampleInputModel">Name</label>
                <input type="text" class="form-control" id="exampleInputFeatureName" asp-for="Name" placeholder="Enter Name">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Title</label>
                <input type="text" class="form-control" id="exampleInputFeatureTitle" asp-for="Title" placeholder="Enter Title">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Comment</label>
                <input type="text" class="form-control" id="exampleInputFeatureComment" asp-for="Comment" placeholder="Enter Comment">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Image Url</label>
                <input type="text" class="form-control" id="exampleInputFeatureImageUrl" asp-for="ImageUrl" placeholder="Enter Image Url">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light" href="/Admin/AdminReference/UpdateReference">Update Reference</button>
        </form>

    </div> <!-- end card-body-->
</div> <!-- end card-->
