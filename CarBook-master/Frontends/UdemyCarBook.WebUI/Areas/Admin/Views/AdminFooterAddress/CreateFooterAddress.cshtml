@model CreateFooterDto
@{
    ViewData["Title"] = "CreateFooterAddress";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Footer Address</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="AdminFooterAddress" asp-action="Index">Footer Address</a></li>
                    <li class="breadcrumb-item">Add Footer Address</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Create Footer Address</h4>
        <p class="card-subtitle mb-4">You can create Footer Address on table below.</p>

        <form method="post">
            <div class="form-group">
                <label for="exampleInputModel">Title</label>
                <input type="text" class="form-control" id="exampleInputFeatureName" asp-for="Description" placeholder="Enter Description">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Description</label>
                <input type="text" class="form-control" id="exampleInputFeatureName" asp-for="Address" placeholder="Enter Address">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Phone</label>
                <input type="text" class="form-control" id="exampleInputFeatureName" asp-for="Phone" placeholder="Enter Phone">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Email</label>
                <input type="text" class="form-control" id="exampleInputFeatureName" asp-for="Email" placeholder="Enter Video Url">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light" href="/Admin/FooterAddress/CreateFooterAddress">Add Footer Address</button>
        </form>

    </div> <!-- end card-body-->
</div> <!-- end card-->
