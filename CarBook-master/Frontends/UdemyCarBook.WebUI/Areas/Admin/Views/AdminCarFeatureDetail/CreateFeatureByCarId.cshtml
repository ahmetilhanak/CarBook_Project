@model List<ResultFeatureDtoWithIsChecked>
@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var featureList = @ViewBag.features;
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Categories</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">CarFeature</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Car Feature Addition</h4>
                <p class="card-subtitle mb-4">
                    You can add <i>Car Features</i> to Car.
                </p>
                
                <form method="post">
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <div class="form-check">
                            <input type="hidden" for=id value="@ViewBag.carId" />
                            <input type="hidden" asp-for="@Model[i].FeatureID" />
                            <input type="hidden" asp-for="@Model[i].Name" />
                            <input type="checkbox" asp-for="@Model[i].IsChecked" class="form-check-input" />
                            <label class="form-check-label" >@Model[i].Name</label>
                        </div>
                    }
                    <br />
                    <button type="submit" class="btn btn-success" asp-area="Admin" asp-controller="AdminCarFeatureDetail" asp-action="CreateFeatureByCarId">Add Feature to the Car</button>
                </form>

                <p>Car Id:@ViewBag.carId</p>
            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->



</div>
