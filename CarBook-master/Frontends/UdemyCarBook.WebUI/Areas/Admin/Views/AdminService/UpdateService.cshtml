@model UpdateServiceDto

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Service</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-controller="AdminService" asp-action="Index">Service</a></li>
                    <li class="breadcrumb-item">Add Service</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->

<div class="card">
    <div class="card-body">

        <h4 class="card-title">Create Service</h4>
        <p class="card-subtitle mb-4">You can create Service on table below.</p>

        <form method="post">
            <input type="hidden" asp-for=ServiceID />

            <div class="form-group">
                <label for="exampleInputModel">Title</label>
                <input type="text" class="form-control" id="exampleInputFeatureTitle" asp-for="Title" placeholder="Enter Title">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Description</label>
                <input type="text" class="form-control" id="exampleInputFeatureDescription" asp-for="Description" placeholder="Enter Description">
            </div>

            <div class="form-group">
                <label for="exampleInputModel">Video Description</label>
                <input type="text" class="form-control" id="exampleInputFeatureIconUrl" asp-for="IconUrl" placeholder="Enter Icon Url">
            </div>
            <button type="submit" class="btn btn-primary waves-effect waves-light" href="/Admin/AdminService/UpdateService">Update Service</button>
        </form>

    </div> <!-- end card-body-->
</div> <!-- end card-->
