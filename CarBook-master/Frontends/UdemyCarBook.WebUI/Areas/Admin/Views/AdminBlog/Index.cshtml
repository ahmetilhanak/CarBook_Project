@model List<ListBlogWithAuthorAndCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

    <!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Blogs</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-area="Default" asp-controller="AdminDashboard" asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item active">Blog</li>
                </ol>
            </div>

        </div>
    </div>
</div>
<!-- end page title -->


<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blogs Table</h4>
                <p class="card-subtitle mb-4">
                    You can do CRUD operations on that table. Plese keep at least one <i>Blog</i> for integrity.
                </p>
                <div class="table-responsive">
                    @if (Model.Count < 1)
                    {
                        <p><b>There is no Blog yet.Please start creating one.</b></p>
                    }
                    else
                    {
                        <table class="table mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Cover Image Url</th>
                                    <th>Created Date</th>
                                    <th>Description</th>
                                    <th>Category</th>
                                    <th>Author</th>
                                    <th>Active/Passive</th>
                                    <th>To Blog</th>
                                    <th>Comments</th>
                                   


                                </tr>
                            </thead>
                            <tbody>
                                <script type="text/javascript">
                                    function confirmDelete() {
                                        return confirm("Are you sure you want to delete this feature?");
                                    }
                                </script>

                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td>@item.CoverImageUrl</td>
                                        <td>@item.CreatedDate</td>
                                        <td>@item.Description</td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.AuthorName</td>
                                        <td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogID" class="btn btn-outline-danger" onclick="return confirmDelete();">Passive</a></td>
                                        <td><a href="/Blog/BlogDetail/@item.BlogID" class="btn btn-outline-dark">Blog</a></td>
                                        <td><a href="/Admin/AdminComment/Index/@item.BlogID" class="btn btn-outline-secondary">Comments</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <br />
                </div>

            </div>
            <!-- end card-body-->
        </div>
        <!-- end card -->

    </div>
    <!-- end col -->



</div>

